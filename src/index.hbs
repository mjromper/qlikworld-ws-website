<html lang="en">
  <head>

    <!-- 
      This is the main Handlebars template for the site 
      - When the user visits the homepage or submits a color the app calls the endpoints in server.js
      - The server script passes data in here and the Handlebars code builds it into the HTML page
    -->

    <meta charset="utf-8" />
    <link rel="icon" href="https://www.qlik.com/assets/site/media/fav/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Qlik World 2023 - Workshops</title>
    

    <!-- Import the webpage's stylesheet -->
    <link rel="stylesheet" href="/style.css" />
    

  <link rel="stylesheet" href="node_modules/leonardo-ui/dist/leonardo-ui.css" type="text/css"/>
  <script src="captcha.js"></script>
    
  </head>
  <body>
    
    {{#if post}}
    <div class="wrapper">
      <div class="content" role="main">

        <!-- This is the start of content for our page -->
        <h1 class="lui-text-success">Great, an invitation email is on its way!!</h1>        
           
        <p>
             Go to your inbox and follow the instructions in the email.
        </p>
        
        <p>
            Thanks!
        </p>
        
        

      </div>
    </div>
    {{/if}}
    
    {{#if get}}
    <div class="wrapper">
      <div class="content" role="main">

        <!-- This is the start of content for our page -->
        <h1 class="lui-text-success">Welcome to Qlik World 2023!</h1>        
           
        <p>
            This is the user registration page for Qlik World 2023 hands-on sessions.
        </p>
        
        <div class="color-form">

          <!-- The "What's your favorite color?" form sends a POST request to the server
               Check server.js to see how it works -->
          <form id="myform" class="color-search" method="post" action="/submit" onsubmit="return validateCaptcha()" autocomplete="off">
            <label for="session">
              <p>
                Select workshop session:
              </p>
              <select class="lui-select" id="session" name="session" required="required" style="width:300px">
                <option value="">-- Select --</option>
                {{#each sessions}}
                  <option value="{{this.id}}" {{this.disabled}} >{{this.name}}</option>
                {{/each}}

              </select>
            </label>
            <label for="email">

              <p>
                Enter your email:
              </p>
              <input class="lui-input" id="email" name="email" required="required" type="text" style="width:300px"/>
              <div id="invalidemail" class="lui-text-danger" style="display:none;">
                Invalid email, please try again.
              </div>
              
              
              
            </label>
            
           
            
            <br>
            <div id="captcha"></div>
            <input type="text" class="lui-input" placeholder="Enter captcha" id="cpatchaTextBox" style="width:150px" required="required"/>
            <script>
              createCaptcha();
            </script>
            <!-- If the user submits a value through the form 
                 it'll be passed to the server in the request body  -->
            
            <div id="invalidcaptcha" class="lui-text-danger" style="font-weight:bold;display:none;">
                Invalid captcha, please try again.
            </div>
            <br>
            <button id="submitbtn" class="lui-button  lui-button--success" type="submit">Submit</button>
          </form>
            
          
        </div>


      </div>
    </div>
    {{/if}}
    <!-- The footer holds our remix button — you can use it for structure or cut it out ✂ -->
    <footer class="footer">
      <div class="links"></div>
 
    </footer>
    
  
    
  </body>
</html>